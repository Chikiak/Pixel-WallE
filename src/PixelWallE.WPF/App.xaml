<Application x:Class="PixelWallE.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PixelWallE.WPF.Converters"
             StartupUri="/Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- 1. Cargar el tema por defecto (colores) -->
                <ResourceDictionary Source="/Themes/Theme.Light.xaml"/>

                <!-- 2. Cargar los estilos que usan los colores del tema -->
                <ResourceDictionary Source="/Styles/Buttons.xaml"/>
                <ResourceDictionary Source="/Styles/Controls.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Converters -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
            <converters:StringContainsConverter x:Key="StringContainsConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>