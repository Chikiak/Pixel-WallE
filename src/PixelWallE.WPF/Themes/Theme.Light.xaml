<!-- File: Themes/Theme.Light.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Palette -->
    <Color x:Key="PrimaryColor">#2563EB</Color>
    <Color x:Key="SuccessColor">#10B981</Color>
    <Color x:Key="DangerColor">#EF4444</Color>
    <Color x:Key="WarningColor">#F59E0B</Color>
    <Color x:Key="InfoColor">#06B6D4</Color>
    <Color x:Key="SecondaryColor">#6B7280</Color>

    <!-- UI Colors -->
    <Color x:Key="ApplicationBackgroundColor">#F3F4F6</Color>
    <Color x:Key="ControlBackgroundColor">#FFFFFF</Color>
    <Color x:Key="LightBackgroundColor">#F9FAFB</Color>
    <Color x:Key="BorderColor">#E5E7EB</Color>
    <Color x:Key="TextColor">#1F2937</Color>
    <Color x:Key="MutedTextColor">#6B7280</Color>
    <Color x:Key="SeparatorColor">#E5E7EB</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
    
    <SolidColorBrush x:Key="ApplicationBackgroundBrush" Color="{StaticResource ApplicationBackgroundColor}"/>
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}"/>
    <SolidColorBrush x:Key="LightBrush" Color="{StaticResource LightBackgroundColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="MutedBrush" Color="{StaticResource MutedTextColor}"/>
    <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource SeparatorColor}"/>
</ResourceDictionary>