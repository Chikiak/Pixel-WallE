<Window x:Class="PixelWallE.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        xmlns:viewModels="clr-namespace:PixelWallE.WPF.ViewModels"
        xmlns:converters="clr-namespace:PixelWallE.WPF.Converters"
        xmlns:behaviors="clr-namespace:PixelWallE.WPF.Behaviors"
        mc:Ignorable="d"
        Title="PixelWallE Studio" 
        Height="800" Width="1400"
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen">
    
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisConverter"/>
        <converters:StringContainsConverter x:Key="StringContainsConverter"/>
        
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="10,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E9ECEF" 
                BorderThickness="0,0,0,1" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="▶ Run" 
                            Style="{StaticResource ToolbarButtonStyle}"
                            Command="{Binding RunCommand}"
                            Background="#28A745" Foreground="White"/>
                    <Button Content="💾 Save" 
                            Style="{StaticResource ToolbarButtonStyle}"
                            Command="{Binding SaveImageCommand}"
                            Background="#007BFF" Foreground="White"/>
                    <Button Content="🗑 Clear" 
                            Style="{StaticResource ToolbarButtonStyle}"
                            Command="{Binding ClearOutputCommand}"/>
                    <Button Content="↻ Reset" 
                            Style="{StaticResource ToolbarButtonStyle}"
                            Command="{Binding ResetCodeCommand}"/>
                </StackPanel>
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding StatusMessage}"
                           Style="{StaticResource StatusTextStyle}"
                           HorizontalAlignment="Center"
                           FontStyle="Italic"/>
                           
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Canvas:" Style="{StaticResource StatusTextStyle}"/>
                    <TextBox Text="{Binding CanvasWidth, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="5,0" VerticalAlignment="Center"/>
                    <TextBlock Text="×" Style="{StaticResource StatusTextStyle}"/>
                    <TextBox Text="{Binding CanvasHeight, UpdateSourceTrigger=PropertyChanged}" 
                             Width="60" Margin="5,0" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Code Editor -->
            <GroupBox Grid.Column="0" Header="Code Editor" Margin="0,0,5,0">
                <avalonedit:TextEditor
                    FontFamily="Consolas, 'Courier New', monospace"
                    FontSize="14"
                    SyntaxHighlighting="C#"
                    behaviors:TextEditorBehavior.BoundText="{Binding SourceCode, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                    ShowLineNumbers="True"
                    LineNumbersForeground="#6C757D"
                    Background="#FFFFFF"
                    Foreground="#212529"/>
            </GroupBox>
            
            <GridSplitter Grid.Column="1" Width="10" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch"
                          Background="Transparent"/>

            <!-- Image Viewer -->
            <GroupBox Grid.Column="2" Header="Canvas Output" Margin="5,0,0,0">
                <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1">
                    <Grid>
                        <Image Source="{Binding RenderedImage}" 
                               Stretch="Uniform"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                        
                        <!-- Loading Indicator -->
                        <Border Background="#80000000" 
                                Visibility="{Binding IsExecuting, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="⚙ Executing..." 
                                          Foreground="White" 
                                          FontSize="16" 
                                          HorizontalAlignment="Center"/>
                                <ProgressBar IsIndeterminate="True" 
                                            Width="200" 
                                            Height="4" 
                                            Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- No Image Placeholder -->
                        <TextBlock Text="No image generated yet.&#x0a;Click 'Run' to execute your code."
                                  HorizontalAlignment="Center" 
                                  VerticalAlignment="Center"
                                  TextAlignment="Center"
                                  Foreground="#6C757D"
                                  FontStyle="Italic"
                                  Visibility="{Binding RenderedImage, Converter={StaticResource InverseBoolToVisConverter}}"/>
                    </Grid>
                </Border>
            </GroupBox>
        </Grid>
        
        <GridSplitter Grid.Row="2" Height="10" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Center"
                      Background="Transparent"/>

        <!-- Output Console -->
        <GroupBox Grid.Row="3" Header="Output Console" Margin="0,5,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListBox ItemsSource="{Binding Messages}" 
                         FontFamily="Consolas, 'Courier New', monospace"
                         FontSize="12"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="5,2"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=., Converter={StaticResource StringContainsConverter}, ConverterParameter=✗}" Value="True">
                                    <Setter Property="Foreground" Value="#DC3545"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=., Converter={StaticResource StringContainsConverter}, ConverterParameter=✓}" Value="True">
                                    <Setter Property="Foreground" Value="#28A745"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>