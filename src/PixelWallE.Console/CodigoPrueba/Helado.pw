y_val <- 25
color_str <- COLOR_PIEL
size_val <- 1

loop_piernas_1
Respawn(x_val + offset_x, y_val + offset_y)
Color(color_str)
Size(size_val)
DrawLine(0,0,1) # Dibuja un solo pixel
x_val <- x_val + 1
GoTo [loop_piernas_1] (x_val < 16)

