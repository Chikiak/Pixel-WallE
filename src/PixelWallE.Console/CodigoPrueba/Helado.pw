COLOR_ROJO <- "Red"
COLOR_BLANCO <- "White"
COLOR_NEGRO <- "Black"
COLOR_ROSA <- "Purple"   # Usamos Purple como un color cercano al rosa fuerte
COLOR_AZUL <- "Blue"
COLOR_MARRON <- "Yellow" # Usamos Yellow como un color cercano al marron claro

# Inicio del dibujo principal
Respawn(offset_x, offset_y)
Size(1) # Siempre usaremos pincel de 1 para pixel art

# Dibujar la base del cuerpo y las piernas (parte inferior)
# Usando Color("Orange") para simular COLOR_PIEL
